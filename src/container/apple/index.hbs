<div class="page">
  <div class="header">
    {{#with header}}
      <header class="header__content">
        <div class="header__block">
          <img src="/svg/apple.svg" alt="Apple" class="header__icon">
          <nav class="header__block">
            {{#each links}}
              <a href="{{url}}" class="header__link">{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class="header__block">
          <img src="/svg/search.svg" alt="search" class="header__icon">
          <img src="/svg/profile.svg" alt="profile" class="header__icon">
        </div>
      </header>
    {{/with}}
  </div>

  <div class="ad">
    <div class="ad__content">
       {{#with header/ad}}
        <div class="ad__title">{{title}}</div>
        {{#with link}}
          <a class="ad__link" href="{{url}}">{{text}}</a>
        {{/with}}
      {{/with}}
    </div>
  </div>

  {{#with iphone_pro}}
